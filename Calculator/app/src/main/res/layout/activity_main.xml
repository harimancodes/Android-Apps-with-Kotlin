<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:maxLength="12"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/orbitron_black"
        android:gravity="end"
        android:hint="88888888888888"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnOnOff"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:background="#FB0000"
                android:layout_margin="1dp"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btnBack"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="B"
                android:textColor="#FFFFFF"
                android:background="#093E3D"
                android:layout_margin="1dp"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btnModulo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:textColor="#FFFFFF"
                android:background="#E14D07"
                android:layout_margin="1dp"
                android:textSize="32sp" />
            <Button
                android:textAlignment="center"
                android:id="@+id/btnAdd"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:background="#E14D07"
                android:layout_margin="1dp"
                android:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="28sp"
                android:id="@+id/btn7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textAlignment="center"
                android:textSize="28sp"
                android:layout_margin="1dp"
                android:id="@+id/btnSubtract"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="-"
                android:textColor="#FFFFFF"
                android:background="#E14D07"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="28sp"
                android:id="@+id/btn4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textAlignment="center"
                android:textSize="28sp"
                android:layout_margin="1dp"
                android:id="@+id/btnMultiply"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="*"
                android:textColor="#FFFFFF"
                android:background="#E14D07"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="28sp"
                android:id="@+id/btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textSize="28sp"
                android:id="@+id/btn3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>

            <Button
                android:textAlignment="center"
                android:textSize="28sp"
                android:id="@+id/btnDivide"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="/"
                android:textColor="#FFFFFF"
                android:background="#E14D07"
                android:layout_margin="1dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnClear"
                android:textSize="32sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="C"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#1A1B71"/>
            <Button
                android:id="@+id/btn0"
                android:textSize="32sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>
            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnDecimal"
                android:textSize="32sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="."
                android:textColor="#FFFFFF"
                android:background="#333333"/>
            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnEquals"
                android:textSize="32sp"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="="
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:background="#46EF08"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

